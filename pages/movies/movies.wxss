@import "movieList-template/movieList-template.wxss";
@import "movie-gridview/gridview-template.wxss";

.container {
  background-color: #f2f2f2;
}

.movie-list-item {
  margin-bottom: 30rpx;
}

.search-container {
  background-color: #f2f2f2;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
}

.search-container input {
  height: 100%;
  width: 600rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.placeholder {
  margin-left: 20rpx;
  font-size: 14px;
  color: #d1d1d1;
}

.search-icon {
  margin: auto 0rpx auto 20rpx;
}

.search-cancel {
  margin: auto 20rpx auto 20rpx;
}

.search-panel {
  position: absolute;
  top: 80rpx;
}
