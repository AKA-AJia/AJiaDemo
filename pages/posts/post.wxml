<view>


  <swiper indicator-dots="true" interval="3000" autoplay="true">
    <swiper-item>
      <image src="/images/postsImg/haizeiwang.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/postsImg/huoying.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/postsImg/ganglian.jpg"></image>
    </swiper-item>
  </swiper>

<block wx:for="{{post_key}}" wx:for-item="item">
  <view class="post-container">
    <view class="post-author-date">
      <image class="post-author-img" src="{{item.avatar}}"></image>
      <text class="post-date">{{item.date}}</text>
    </view>
    <text class="post-title">{{item.title}}</text>
    <image class="post-image" src="{{item.imgSrc}}"></image>
    <text class="post-content">{{item.content}}</text>
    <view class="post-like">
        <image class="post-like-image" src="../../images/postsImg/collect.jpg"></image>
        <text class="post-like-font">{{item.collection}}</text>
        <image class="post-like-image" src="../../images/postsImg/pinglun.jpg"></image>
        <text class="post-like-font">{{item.reading}}</text>
    </view>
  </view>
</block>
</view>