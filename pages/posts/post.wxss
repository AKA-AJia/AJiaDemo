swiper{
    width: 100%;
    height: 500rpx;
}

swiper image{
    width: 100%;
    height: 500rpx;
}

.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 20px;
    margin-bottom: 40px;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-top: 5px;
    padding-bottom: 5px;
    background-color: #fff;
}

.post-author-date{
    margin: 10rpx 0rpx 10rpx 10rpx;
}

.post-author-img{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
    margin-bottom: 10rpx;
    font-size: 26rpx;
}

.post-date{
    margin-left: 20rpx;
    vertical-align: middle;
}

.post-title{
    font-weight: 600;
    color: #333;
    font-size: 34rpx;
    margin-bottom: 10rpx;
    margin-left: 10rpx;
}

.post-image{
    width: 100%;
    height: 340rpx;
    margin: auto 0;
    margin-bottom: 15px;
}

.post-content{
    color: #666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}

.post-like{
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
}

.post-like-image{
    height: 18px;
    width: 18px;
    margin-right: 8px;
    vertical-align: middle;
}

.post-like-font{
    vertical-align: middle;
    margin-right: 20px;
}